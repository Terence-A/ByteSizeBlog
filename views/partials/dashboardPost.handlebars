{{! Renders blog post title (link), username, date, description & edit/delete buttons on dashboard page }}
<div class="comment-container">

  <div class="card">
    <div class="dashboard-comment">
      <div class="dashboard-card-title">
        <h2><a href="/blogPost/{{id}}">{{title}}</a></h2>
        <p>Created by {{user.name}} on {{format_date date_created}}</p>
      </div>
      <div class="dashboard-card-body">
        <p>{{description}}</p>
        <div class="dashboard-btns">
          <button id="editBtn" data-id="{{id}}">Edit</button>
          <button id="deleteBtn" data-id="{{id}}">Delete</button>
        </div>
      </div>
    </div>

  </div>
</div>